<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/pan" >
 
    	<TextView
        android:id="@+id/textCodigoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>
    
        <TextView
        android:id="@+id/textRutCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textRazonCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textPagoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textDireccionCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textCiudadCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textTelefonoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>
        
        <TextView
        android:id="@+id/textCelularCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFF"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent">
            
            <Button 
                android:id="@+id/buttonEditarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editar"
                android:textColor="#FFFFFF"/>
            
            <Button 
                android:id="@+id/buttonEliminarCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eliminar"
                android:textColor="#FFFFFF"/>
            
        </LinearLayout>
 
</LinearLayout>